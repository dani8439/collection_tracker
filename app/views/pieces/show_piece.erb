<% end %>

<h2>Piece Name: <%= @piece.name %></h2>
<br>
<h2>Size: <%= @piece.size %></h2>
<br>
<h2>Quantity: <%= @piece.quantity %></h2>

<a href="/pieces/<%= @piece.id %>/edit">Edit Piece </a>
<br></br>

<form action="/pieces/<%= @piece.id %>/delete" method="POST">
  <input id="hidden" type="hidden" name="_method" value="delete">
  <input type="submit" id="submit" value="Delete Piece">
</form>

